<h1>Authors list</h1>

<ul class="authors-list">
  {{#each model.authors as |author|}}
    <li>
      <img src="{{author.avatar}}" alt="">
      <span class="title">
        {{author.fullName}}
      </span>

      <span class="more-info">
        {{fa-icon "pencil-square-o"}}
        {{author.posts.length}} posts
      </span>

      {{fa-icon "times" click=(action "delete" author.id)}}

      {{#link-to "author" author.id}}
        View profile
        {{fa-icon "chevron-right"}}
      {{/link-to}}

      {{#if author.isDeleted}}
        <div class="loading">
          {{fa-icon "circle-o-notch" spin=true}}
        </div>
      {{/if}}
    </li>
  {{/each}}
</ul>
