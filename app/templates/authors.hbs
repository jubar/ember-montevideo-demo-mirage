
<div class="layout-row layout-align-center-start">
  <div class="layout-row flex">
    <div class="flex-5"></div>

    <div class="flex layout-row layout-align-center-stretch layout-wrap">
      {{#each model as |author|}}

        {{#paper-card class="layout-column flex-80 flex-gt-xs-40 flex-gt-sm-25 flex-lg-20" as |card|}}
          {{card.image src=author.avatar title=author.fullName}}
          <div class="flex layout-column">
            {{#card.title class="flex-nogrow" as |title|}}
              {{#title.text as |text|}}
                {{#text.headline}}{{author.fullName}}{{/text.headline}}
                {{#text.subhead}}
                  {{paper-icon "speaker-notes" size=24 class="md-primary"}}
                  {{author.posts.length}} posts
                {{/text.subhead}}
              {{/title.text}}
            {{/card.title}}

            {{#card.content class="flex-auto"}}
              <p>
                {{author.bio}}
              </p>
            {{/card.content}}

            {{paper-divider}}

            {{#card.actions class="layout-row layout-wrap layout-align-center-center" as |actions|}}
              {{#paper-button
                class="md-primary"
                onClick=(action "delete" author.id)
              }}
                Delete
              {{/paper-button}}
              {{#paper-button
                class="md-raised md-primary"
                onClick=(action "detail" author.id)
              }}
                Detail
              {{/paper-button}}
            {{/card.actions}}
          </div>

          {{#if author.isDeleted}}
          <div class="loading loading layout-column flex layout-align-center-stretch">
            <div class="layout-column flex layout-align-center-center">
              {{paper-progress-circular diameter=96}}
            </div>
          </div>
          {{/if}}
        {{/paper-card}}

      {{/each}}
    </div>
    <div class="flex-5"></div>
  </div>
</div>



<h1>Authors list</h1>

<ul class="authors-list">
  {{#each model as |author|}}
    <li>
      <img src="{{author.avatar}}" class="avatar" alt="">
      <span class="title">{{author.fullName}}</span>

      <span class="more-info">
        {{fa-icon "pencil-square-o"}}
        <span class="post-count">{{author.posts.length}}</span> posts
      </span>

      {{fa-icon "times" click=(action "delete" author.id)}}

      {{#link-to "author" author.id}}
        View profile
        {{fa-icon "chevron-right"}}
      {{/link-to}}

      {{#if author.isDeleted}}
        <div class="loading">
          {{fa-icon "circle-o-notch" spin=true}}
        </div>
      {{/if}}
    </li>
  {{/each}}
</ul>
