{{#paper-toolbar}}
  {{#paper-toolbar-tools}}
    {{#paper-button iconButton=true onClick=(action "toggleSideNav") }}
      {{paper-icon "menu"}}
    {{/paper-button}}
    <h2>
      Ember Montevideo Demo Mirage with Ember Paper
    </h2>
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}

{{#paper-sidenav-container class="inner-sidenav"}}
  {{#paper-sidenav
    class="md-whiteframe-z2"
    name="left"
    lockedOpen=false
    open=leftSideBarOpen
    onToggle=(action (mut leftSideBarOpen))
  }}
    {{#paper-toolbar as |toolbar|}}
      {{#paper-toolbar-tools}}
        Menu
      {{/paper-toolbar-tools}}
    {{/paper-toolbar}}
    {{#paper-content padding=true class="layout-column layout-align-center-stretch"}}

      {{#paper-button noink=true primary=true}}
        {{#link-to "authors" class="block"}}
          Authors
        {{/link-to}}
      {{/paper-button}}

      {{#paper-button noink=true primary=true}}
        {{#link-to "paper-authors" class="block"}}
          <strong>Paper</strong> Authors
        {{/link-to}}
      {{/paper-button}}

    {{/paper-content}}
  {{/paper-sidenav}}

  {{#paper-card-content class="flex"}}
    {{outlet}}
  {{/paper-card-content}}
{{/paper-sidenav-container}}
